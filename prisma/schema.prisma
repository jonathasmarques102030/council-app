generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Person {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  image String?
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
